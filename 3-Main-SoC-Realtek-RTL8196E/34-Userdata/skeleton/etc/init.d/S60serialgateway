#!/bin/sh
#
# S60serialgateway ‚Äî Init script to launch serialgateway
#
#
# J. Nilo - Nov 2025
#

case "$1" in
start)

    echo "üöÄ Starting serialgateway..."
    serialgateway >/dev/null 2>&1 &
    ;;

stop)

    echo "üõë Stopping serialgateway..."
    killall serialgateway 2>/dev/null
    ;;

restart)
    $0 stop
    sleep 1
    $0 start
    ;;

*)
    echo "‚ÑπÔ∏è Usage: $0 {start|stop|restart}"
    exit 1
    ;;
esac

exit 0

