case "$1" in
start)

    echo "ğŸš€ Starting serialgateway..."
    serialgateway
    ;;

stop)

    echo "ğŸ›‘ Stopping serialgateway..."
    killall serialgateway
    ;;

restart)
    $0 stop
    sleep 1
    $0 start
    ;;

*)
    echo "â„¹ï¸ Usage: $0 {start|stop|restart}"
    exit 1
    ;;
esac

exit 0

